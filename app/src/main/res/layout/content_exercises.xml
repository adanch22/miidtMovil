<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_exercises"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ciex.edu.mx.activity.ExercisesActivity"
    tools:showIn="@layout/activity_exercises">

    <ViewFlipper android:id="@+id/viewFlipper"
        android:layout_height="match_parent"
        android:layout_width="match_parent" >
<!--
        <include android:id="@+id/presentationView" layout="@layout/presentation"/>
        <include android:id="@+id/questionaryView" layout="@layout/questionary"/>
        <include android:id="@+id/multipleView" layout="@layout/multipleoptions"/>

        <include layout="@layout/results"/>-->

        <RelativeLayout
            android:id="@+id/presentationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
            android:id="@+id/nopresentation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. ejercicio"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp" />


        <RelativeLayout
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/iron"
            android:layout_marginTop="70dp"
            android:elevation="5dp"
            android:id="@+id/contentq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imagePresentation"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_toRightOf="@id/imagePresentation"
                android:layout_toEndOf="@+id/imagePresentation"
                android:id="@+id/infoPresentation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:text="Information"
                android:textSize="20sp"/>

            <TextView
                android:layout_below="@id/imagePresentation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Information"
                android:visibility="gone"
                android:textSize="20sp"
                android:id="@+id/tv1"/>
            <EditText
                android:layout_below="@id/tv1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/et1"/>

            <TextView
                android:layout_below="@id/et1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:textSize="20sp"
                android:id="@+id/tv2"/>
            <EditText

                android:layout_below="@id/tv2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/et2"/>

            <TextView
                android:layout_below="@id/et2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Information"
                android:visibility="gone"
                android:textSize="20sp"
                android:id="@+id/tv3"/>
            <EditText
                android:layout_below="@id/tv3"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/et3"/>


        </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
        android:id="@+id/questionary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/iron"
            android:layout_marginTop="100dp"
            android:elevation="5dp"
            android:id="@+id/contentq"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/infoquestionary"
                android:layout_below="@id/contentq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:text="Questionary"
                android:textSize="20sp"/>

            <TextView
                android:layout_below="@id/infoquestionary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:text="Information"
                android:visibility="gone"
                android:textSize="20sp"
                android:id="@+id/qtv1"/>
            <EditText
                android:layout_below="@id/qtv1"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/qet1"
                android:theme="@style/AppTheme"/>

            <TextView
                android:layout_below="@id/qet1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:textSize="20sp"
                android:id="@+id/qtv2"/>
            <EditText

                android:layout_below="@id/qtv2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/qet2"/>

            <TextView
                android:layout_below="@id/qet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Information"
                android:visibility="gone"
                android:textSize="20sp"
                android:id="@+id/qtv3"/>
            <EditText
                android:layout_below="@id/qtv3"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/qet3"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/noQuestionary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. ejercicio"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp" />

    </RelativeLayout>


        <RelativeLayout
            android:id="@+id/multipleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="100dp"
                android:background="@color/iron"
                android:elevation="5dp"
                android:id="@+id/content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/infomultipleoptions"
                    android:layout_below="@id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Information"
                    android:textSize="20sp"/>


                <TextView
                    android:layout_below="@id/infomultipleoptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:text="question"
                    android:textSize="20sp"
                    android:id="@+id/mtv1"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/mtv1">

                    <RadioButton
                        android:id="@+id/ranswer1"
                        android:checked="true"
                        android:text=""
                        android:textSize="18sp"
                        android:onClick="onRadioButtonClicked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/ranswer2"
                        android:text=""
                        android:textSize="18sp"
                        android:onClick="onRadioButtonClicked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/ranswer3"
                        android:text=""
                        android:textSize="18sp"
                        android:onClick="onRadioButtonClicked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RadioGroup>

            </RelativeLayout>

            <TextView
                android:id="@+id/nomultipleoptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. ejercicio"
                android:textColor="@color/colorPrimary"
                android:textSize="28sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/results"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/layoutPresentation"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/infoResults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Ejercicios terminados\nRESULTADOS:"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>


        </RelativeLayout>


    </ViewFlipper>

</RelativeLayout>
